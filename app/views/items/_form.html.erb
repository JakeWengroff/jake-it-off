 <%= form_for [current_user, item] do |f| %>
   <% if item.errors.any? %>
     <div class="alert alert-danger">
       <h4>There are <%= pluralize(item.errors.count, "error") %>.</h4>
       <ul>
         <% item.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>

      <%= f.label :name, "Add a To-Do" %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter your item here." %>

   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
 <% end %>